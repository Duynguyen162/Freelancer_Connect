<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- trắng đậm -->
            <stroke android:width="1dp" android:color="#222A35" />
            <corners android:radius="10dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Trạng thái chưa chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" /> <!-- trắng mờ 50% -->
            <stroke android:width="1dp" android:color="#222A35" />
            <corners android:radius="10dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>
