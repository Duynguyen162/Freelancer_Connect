<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <!-- Họ và tên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Họ và tên :"
                android:textSize="16sp"
                android:textColor="#222"/>
            <EditText
                android:id="@+id/edt_full_name"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:textSize="15sp"
                android:padding="6dp"/>
        </LinearLayout>

        <!-- Chức vụ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Chức vụ :"
                android:textSize="16sp"
                android:textColor="#222"/>
            <EditText
                android:id="@+id/edt_position"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:textSize="15sp"
                android:padding="6dp"/>
        </LinearLayout>

        <!-- Tên đăng nhập -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập :"
                android:textSize="16sp"
                android:textColor="#222"/>
            <EditText
                android:id="@+id/edt_username"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:textSize="15sp"
                android:padding="6dp"/>
        </LinearLayout>

        <!-- Mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Mật khẩu :"
                android:textSize="16sp"
                android:textColor="#222"/>
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:textSize="15sp"
                android:padding="6dp"
                android:inputType="textPassword"/>
        </LinearLayout>

        <!-- Ảnh đại diện -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Ảnh đại diện :"
                android:textSize="16sp"
                android:textColor="#222"/>
            <EditText
                android:id="@+id/edt_avatar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:gravity="top"
                android:hint="Link hoặc chọn ảnh"
                android:padding="6dp"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Cấp quyền -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cấp quyền :"
            android:textSize="16sp"
            android:textColor="#222"
            android:layout_marginBottom="5dp"/>
        <CheckBox
            android:id="@+id/chk_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lí tài khoản"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/chk_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lí thông báo"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/chk_authenticate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác thực đăng kí"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/chk_statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác thực thống kê"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/chk_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lí danh mục dịch vụ"
            android:textSize="15sp"/>

        <!-- Nút tạo tài khoản -->
        <Button
            android:id="@+id/btn_create_account"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="18dp"
            android:text="Tạo tài khoản"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFF"
            />
    </LinearLayout>
</ScrollView>
