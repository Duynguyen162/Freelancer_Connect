<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_service_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_edittext"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    android:elevation="1dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_logo"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_avatar_default"
        />

    <!-- Nội dung dịch vụ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên dịch vụ"
            android:textColor="#222A35"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150.000 đồng/h"
            android:textColor="#515B6C"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_duyet"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:text="Đã duyệt"
                android:background="@drawable/bg_btn"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:padding="0dp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
