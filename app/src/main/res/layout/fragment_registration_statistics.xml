<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_service_statistics"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F9FBFC"
    android:padding="16dp">

    <!-- Statistics Card -->
    <LinearLayout
        android:id="@+id/layout_statistics_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_statistics"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <!-- Gia sư -->
        <LinearLayout
            android:id="@+id/layout_tutor_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_tutor_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gia sư"
                android:textColor="#222A35"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_tutor_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#222A35"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Progress Bar Gia sư -->
        <ProgressBar
            android:id="@+id/progress_tutor"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="20dp"
            android:progress="52"
            android:max="100"
            android:progressTint="#267AFF"
            android:progressBackgroundTint="#E8F2FF"/>

        <!-- Thợ làm bánh -->
        <LinearLayout
            android:id="@+id/layout_baker_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_baker_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thợ làm bánh"
                android:textColor="#222A35"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_baker_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#222A35"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Progress Bar Thợ làm bánh -->
        <ProgressBar
            android:id="@+id/progress_baker"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="20dp"
            android:progress="26"
            android:max="100"
            android:progressTint="#267AFF"
            android:progressBackgroundTint="#E8F2FF"/>

        <!-- Sửa chữa -->
        <LinearLayout
            android:id="@+id/layout_repair_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_repair_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sửa chữa"
                android:textColor="#222A35"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_repair_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#222A35"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Progress Bar Sửa chữa -->
        <ProgressBar
            android:id="@+id/progress_repair"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="22"
            android:max="100"
            android:progressTint="#267AFF"
            android:progressBackgroundTint="#E8F2FF"/>
    </LinearLayout>

    <!-- Tổng số dịch vụ -->
    <TextView
        android:id="@+id/tv_total_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng số dịch vụ: 23"
        android:textColor="#222A35"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>