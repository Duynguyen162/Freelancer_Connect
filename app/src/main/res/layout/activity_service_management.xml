<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_service_management"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FBFC">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#2C5A80">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác thực đăng kí"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <!-- Button Bar -->
        <LinearLayout
            android:id="@+id/layout_button_bar"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp">

            <android.widget.Button
                android:id="@+id/btn_waiting_approve"
                android:layout_width="125dp"
                android:layout_height="38dp"
                android:text="Đang chờ duyệt"
                android:background="@drawable/bg_header_button"
                android:textColor="#222A35"
                android:textSize="12sp"
                android:layout_marginEnd="7dp" />


            <android.widget.Button
                android:id="@+id/btn_approved"
                android:layout_width="125dp"
                android:layout_height="38dp"
                android:text="Đã xác thực"
                android:background="@drawable/bg_header_button"
                android:textColor="#222A35"
                android:textSize="12sp"
                android:layout_marginEnd="7dp"/>
            <android.widget.Button
                android:id="@+id/btn_statistical"
                android:layout_width="125dp"
                android:layout_height="38dp"
                android:text="Thống kê"
                android:background="@drawable/bg_header_button"
                android:textColor="#222A35"
                android:textSize="12sp"
                android:layout_marginEnd="7dp"/>
        </LinearLayout>

    </RelativeLayout>
    <!-- Chỗ chứa Fragment -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
