<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/delete_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Bạn có chắc chắn muốn xóa?"
        android:textColor="#03A9F4"
        android:textSize="16dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/delete_confirm_title"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <Button
            android:id="@+id/button_confirm_delete"
            android:background="@drawable/my_service_custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Đồng ý"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/button_cancel_delete"
            android:background="@drawable/button_cancel_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#00BCD4"
            app:cornerRadius="20dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    
</RelativeLayout>