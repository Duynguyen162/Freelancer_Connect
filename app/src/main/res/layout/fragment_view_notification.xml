<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_notification_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FBFC"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <!-- Card: Cập nhật chính sách -->
    <LinearLayout
        android:id="@+id/card_update_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_search"
        android:padding="16dp"
        android:elevation="1dp">

        <TextView
            android:id="@+id/tv_title_update_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật chính sách"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222A35" />

        <TextView
            android:id="@+id/tv_content_update_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúng tôi đã cập nhật chính sách quyền riêng tư."
            android:textSize="14sp"
            android:textColor="#515B6C"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_edit_update_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textSize="14sp"
                android:textColor="#267AFF"
                android:paddingEnd="14dp"
                android:clickable="true"/>
            <TextView
                android:id="@+id/tv_delete_update_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textSize="14sp"
                android:textColor="#267AFF"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Card: Khuyến mãi 20% -->
    <LinearLayout
        android:id="@+id/card_discount_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_search"
        android:padding="16dp"
        android:elevation="1dp">

        <TextView
            android:id="@+id/tv_title_discount_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khuyến mãi 20%"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222A35" />

        <TextView
            android:id="@+id/tv_content_discount_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm giá dịch vụ sửa chữa đến 20/6."
            android:textSize="14sp"
            android:textColor="#515B6C"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_edit_discount_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textSize="14sp"
                android:textColor="#267AFF"
                android:paddingEnd="14dp"
                android:clickable="true"/>
            <TextView
                android:id="@+id/tv_delete_discount_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textSize="14sp"
                android:textColor="#267AFF"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Nếu có thêm thông báo, chỉ cần copy một card như trên -->

</LinearLayout>
