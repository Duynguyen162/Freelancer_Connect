<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/service_item_color"
        android:padding="10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/service_image"
            android:src="@drawable/tutor_service"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_title"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/service_image"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_price"
            android:textSize="14sp"
            android:text="150.000 đồng"
            android:layout_below="@+id/service_title"
            android:layout_toEndOf="@+id/service_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_star"
            android:textSize="50sp"
            android:text="5"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_star"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>