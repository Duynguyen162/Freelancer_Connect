<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_general_statistics"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bộ lọc thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="6dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/layout_time_filter">

            <TextView
                android:id="@+id/text_time_range"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="7 ngày qua"
                android:textSize="16sp"
                android:textColor="#222222" />

            <ImageView
                android:id="@+id/icon_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Hàng đầu: Người dùng mới, Dịch vụ phổ biến -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:background="@drawable/edittext_border"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:id="@+id/card_new_user">

                <TextView
                    android:id="@+id/text_new_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người dùng mới"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_new_user_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156"
                    android:textSize="22sp"
                    android:textColor="#1666F1"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:background="@drawable/edittext_border"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:id="@+id/card_popular_service">

                <TextView
                    android:id="@+id/text_popular_service_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dịch vụ phổ biến"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_popular_service_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gia sư tiếng anh"
                    android:textSize="16sp"
                    android:textColor="#1666F1"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Hàng 2: Giao dịch thành công, thất bại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:background="@drawable/edittext_border"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:id="@+id/card_success_transaction">

                <TextView
                    android:id="@+id/text_success_transaction_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao dịch thành công"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_success_transaction_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156"
                    android:textSize="22sp"
                    android:textColor="#1666F1"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:background="@drawable/edittext_border"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:id="@+id/card_failed_transaction">

                <TextView
                    android:id="@+id/text_failed_transaction_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao dịch thất bại"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_failed_transaction_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="22sp"
                    android:textColor="#1666F1"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Tỉ lệ giữ chân -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:id="@+id/card_retention_rate">

            <TextView
                android:id="@+id/text_retention_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tỉ lệ giữ chân"
                android:textSize="16sp"
                android:textColor="#222222"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_retention_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textSize="22sp"
                android:textColor="#1666F1"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
