<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header + 2 tab buttons nằm trong LinearLayout màu #3379ad -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/header_blue"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:elevation="3dp">

        <LinearLayout
            android:id="@+id/top_row"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_logo"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phân quyền"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Tab button group ngay dưới tiêu đề, trong header -->
        <LinearLayout
            android:id="@+id/tab_group"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/create_account_tab"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:text="Tạo tài khoản"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"
                android:background="@drawable/bg_header_button"/>

            <Button
                android:id="@+id/list_tab"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:text="Danh sách"
                android:textStyle="bold"
                android:elevation="2dp"
                android:background="@drawable/bg_header_button"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
