<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_service.AddMyServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:id="@+id/layout_add_my_service_heading">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Thêm mới dịch vụ"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/add_my_service_text_view_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Thêm hình ảnh (Tối đa 1 ảnh)"
        android:textColor="@color/black"
        android:layout_below="@id/layout_add_my_service_heading"
        android:padding="16dp"/>

    <LinearLayout
        android:id="@+id/layout_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/add_my_service_text_view_add_image">

        <Button
            android:id="@+id/approving_service_button_add"
            android:background="@drawable/button_add_service_custom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_user"
            android:layout_marginStart="50dp"/>

    </LinearLayout>
    
    <EditText
        android:id="@+id/add_my_service_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input"
        android:hint="Tên dịch vụ *"
        android:layout_below="@+id/layout_add_image"/>

    <EditText
        android:id="@+id/add_my_service_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"
        android:hint="Mô tả chi tiết *"
        android:inputType="textMultiLine"
        android:layout_below="@+id/add_my_service_name"/>

    <Spinner
        android:id="@+id/add_my_service_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/add_my_service_description"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_input"/>


    <EditText
        android:id="@+id/add_my_service_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"
        android:hint="Chi phí *"
        android:layout_below="@+id/add_my_service_category"/>

    <EditText
        android:id="@+id/add_my_service_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"
        android:hint="Giờ làm việc *"
        android:inputType="textMultiLine"
        android:layout_below="@+id/add_my_service_price"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/add_my_service_button_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/my_service_custom_button"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/add_my_service_button_add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/my_service_custom_button"
            android:text="Thêm mới"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>